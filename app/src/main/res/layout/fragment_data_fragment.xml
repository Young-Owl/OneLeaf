<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333"
    android:theme="@style/Theme.OneLeaf"
    tools:context=".data_fragment">

    <app.futured.donut.DonutProgressView
        android:id="@+id/light_donut"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="101dp"
        app:donut_bgLineColor="@color/gray_light"
        app:donut_gapAngle="90"
        app:donut_gapWidth="60"
        app:donut_strokeWidth="6dp"
        app:layout_constraintBottom_toTopOf="@+id/light_donut3"
        app:layout_constraintEnd_toStartOf="@+id/light_donut2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <app.futured.donut.DonutProgressView
        android:id="@+id/light_donut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="101dp"
        app:donut_bgLineColor="@color/gray_light"
        app:donut_gapAngle="90"
        app:donut_gapWidth="60"
        app:donut_strokeWidth="6dp"
        app:layout_constraintBottom_toTopOf="@+id/light_donut4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/light_donut"
        app:layout_constraintTop_toTopOf="parent" />

    <app.futured.donut.DonutProgressView
        android:id="@+id/light_donut3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="108dp"
        app:donut_bgLineColor="@color/gray_light"
        app:donut_gapAngle="90"
        app:donut_gapWidth="100"
        app:donut_strokeWidth="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/light_donut4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/light_donut" />

    <app.futured.donut.DonutProgressView
        android:id="@+id/light_donut4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="108dp"
        app:donut_bgLineColor="@color/gray_light"
        app:donut_gapAngle="90"
        app:donut_gapWidth="100"
        app:donut_strokeWidth="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/light_donut3"
        app:layout_constraintTop_toBottomOf="@+id/light_donut2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Light"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/light_donut"
        app:layout_constraintEnd_toEndOf="@+id/light_donut"
        app:layout_constraintStart_toStartOf="@+id/light_donut" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/light_donut3"
        app:layout_constraintEnd_toEndOf="@+id/light_donut3"
        app:layout_constraintStart_toStartOf="@+id/light_donut3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/light_donut4"
        app:layout_constraintEnd_toEndOf="@+id/light_donut4"
        app:layout_constraintStart_toStartOf="@+id/light_donut4" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/light_donut2"
        app:layout_constraintEnd_toEndOf="@+id/light_donut2"
        app:layout_constraintStart_toStartOf="@+id/light_donut2" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="88dp"
        android:layout_height="124dp"
        android:layout_marginTop="16dp"
        android:background="#00FFFFFF"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/ic_leaficon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="casual"
        android:text="Rose"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>

